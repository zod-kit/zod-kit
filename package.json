{
	"name": "zod-kit",
	"version": "0.0.0",
	"description": "A collection of utilities and extensions for Zod.",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsdown --watch",
		"build": "tsdown",
		"build:clean": "tsdown --clean && tsdown",

		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",

		"typecheck": "tsc --noEmit",
		"format": "biome format --write",
		"lint": "biome lint --fix",
		"check": "biome check --write",

		"prepublish": "pnpm run build:clean && pnpm run typecheck && pnpm run test:run"
	},
	"author": "Navidtm",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Navidtm/zod-kit.git"
	},
	"bugs": {
		"url": "https://github.com/Navidtm/zod-kit/issues"
	},
	"homepage": "https://github.com/Navidtm/zod-kit#readme",
	"keywords": [
		"zod",
		"validation",
		"typescript",
		"schema",
		"utils",
		"extensions"
	],
	"license": "MIT",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"packageManager": "pnpm@10.24.0",
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"tsdown": "^0.18.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"zod": "^3.25.0 || ^4.0.0"
	}
}
